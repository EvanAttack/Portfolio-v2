{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}

    <body data-theme="light">

    <!-- ===== NAVBAR ===== -->
    {%  include('svg.html.twig') %}
    {%  include('navbar.html.twig') %}

    <section class="panel">
        <h4 class="header-section">Scroll to see the before/after</h4>
    </section>

    <section class="comparisonSection">

        <div class="comparisonImage beforeImage">
            <img src="{{ asset("img/avant.png") }}" alt="before">
        </div>
        <div class="comparisonImage afterImage">
            <img src="{{ asset("img/après.png") }}" alt="after">
        </div>
    </section>

    <footer class="bg-transparent">
        <div class="container text-center">
            <p class="mb-0">© <span id="year"></span> Evan N. — Portfolio créé avec HTML, Bootstrap & GSAP</p>
        </div>
    </footer>


    <!-- SCRIPTS -->
    <!-- Bootstrap bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- GSAP + ScrollTrigger -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/InertiaPlugin.min.js"></script>

    {# Scripts locaux #}
    <script src="{{ asset('js/git.js') }}"></script>
    <script src="{{ asset('js/gsap.js') }}"></script>
    <script src="{{ asset('js/inertia.js') }}"></script>


    <script>
        document.getElementById('year').textContent = new Date().getFullYear();
    </script>



    </body>


{% endblock %}
